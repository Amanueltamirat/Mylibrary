<div class="book-form">
  <div class="title">
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title  %>" />
  </div>

  <div class="author">
    <label>Author</label>
    <select name="author" class="select">
      <% authors.forEach((author)=>{ if(author.id === book.author){ %>
      <option
        selected
        label="<%= author.name  %>"
        value="<%= author.id %>"
        class="option"
      ></option>
      <% } else { %>
      <option
        label="<%= author.name  %>"
        value="<%= author.id %>"
        class="option"
      ></option>
      <% } %> <% }) %>
    </select>
  </div>
</div>
<div class="book-form">
  <div class="publishedDate">
    <label>Publish Date</label>
    <input
      type="date"
      name="publishedDate"
      value="<%= book.publishedDate == null ? '' : book.publishedDate.toISOString().split('T')[0]  %>"
    />
  </div>
  <div class="page">
    <label>Page</label>
    <input
      type="number"
      name="pageCount"
      min="1"
      value="<%= book.pageCount%>"
    />
  </div>
</div>

<div class="book-form">
  <div class="cover">
    <label>Cover</label>
    <input type="file" name="cover" class="file" />
  </div>
  <div class="description">
    <label>Description</label>
    <textarea name="description"><%= book.description  %></textarea>
  </div>
</div>
